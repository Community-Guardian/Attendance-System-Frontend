# Augment Frontend Development Guidelines and Standards

project:
  name: attendance-system-frontend
  type: next.js
  framework_version: "14.1.0"
  typescript_version: "5.0.0"
  node_version: ">=18.0.0"

architecture:
  base_structure:
    - app:
        - (auth):
            - login
            - register
            - forgot-password
        - dashboard:
            - admin
            - lecturer
            - student
            - dean
            - hod
            - config
        - layout.tsx
        - page.tsx
    - components:
        - ui
        - custom
        - forms
        - layout
        - shared
    - lib:
        - utils
        - constants
        - types
    - hooks:
        - auth
        - data
        - ui
    - styles:
        - globals.css
        - themes
    - public:
        - images
        - icons
        - fonts

coding_standards:
  components:
    naming_conventions:
      - components: "PascalCase"
      - hooks: "camelCase with use prefix"
      - utils: "camelCase"
      - constants: "UPPER_SNAKE_CASE"
      - types: "PascalCase"
    
    structure_rules:
      - use_client_directive: true
      - props_interface: true
      - default_export: true
      - component_documentation: true
    
    component_template: |
      'use client'
      
      interface ComponentProps {
        // props definition
      }
      
      export default function Component({ prop1, prop2 }: ComponentProps) {
        return (
          // JSX
        )
      }

  styling:
    framework: "tailwindcss"
    configuration:
      - use_css_variables: true
      - theme_customization: true
      - responsive_design: true
      - dark_mode: true
    
    class_naming:
      - use_meaningful_names: true
      - follow_bem_like_structure: true
      - prefer_utility_classes: true

  state_management:
    local_state:
      - use_react_hooks: true
      - prefer_controlled_components: true
    
    global_state:
      - use_context: true
      - use_reducers: true
      - use_tanstack_query: true

  forms:
    library: "react-hook-form"
    validation: "zod"
    rules:
      - use_form_components: true
      - implement_validation: true
      - handle_errors: true
      - show_loading_states: true

api_integration:
  base_configuration:
    client: "axios"
    base_url: "process.env.NEXT_PUBLIC_API_URL"
    timeout: 30000
    
  interceptors:
    request:
      - auth_token
      - content_type
    response:
      - error_handling
      - data_transformation
  
  error_handling:
    - network_errors
    - validation_errors
    - authentication_errors
    - server_errors

authentication:
  strategy: "JWT"
  storage: "cookies"
  settings:
    token_name: "auth_token"
    refresh_token_name: "refresh_token"
    secure: true
    http_only: true
  
  protected_routes:
    - check_auth: true
    - redirect_unauthorized: true

ui_components:
  design_system: "shadcn/ui"
  required_components:
    - Button
    - Input
    - Form
    - Dialog
    - Toast
    - Card
    - Table
    - Tabs
    - Select
    - DatePicker

responsive_design:
  breakpoints:
    - sm: "640px"
    - md: "768px"
    - lg: "1024px"
    - xl: "1280px"
    - "2xl": "1536px"
  
  mobile_first: true
  responsive_images: true

performance:
  optimization:
    - image_optimization: true
    - code_splitting: true
    - lazy_loading: true
    - caching_strategy: true
  
  metrics:
    - first_contentful_paint: "<1s"
    - largest_contentful_paint: "<2.5s"
    - time_to_interactive: "<3.5s"

accessibility:
  requirements:
    - aria_labels: true
    - semantic_html: true
    - keyboard_navigation: true
    - color_contrast: true
    - screen_reader_support: true

testing:
  frameworks:
    - jest
    - react-testing-library
    - cypress
  
  coverage:
    minimum: 80%
  
  required_tests:
    - components
    - hooks
    - utils
    - integration

documentation:
  components:
    - props
    - usage_examples
    - accessibility
    - storybook
  
  code:
    - comments
    - type_definitions
    - jsdoc

dependencies:
  required:
    ui:
      - "@radix-ui/react-*": "latest"
      - "class-variance-authority": "latest"
      - "tailwind-merge": "latest"
      - "clsx": "latest"
    
    forms:
      - "react-hook-form": "latest"
      - "@hookform/resolvers": "latest"
      - "zod": "latest"
    
    data:
      - "@tanstack/react-query": "latest"
      - "axios": "latest"
    
    utils:
      - "date-fns": "latest"
      - "js-cookie": "latest"
      - "jwt-decode": "latest"

development:
  tools:
    - eslint
    - prettier
    - typescript
    - husky
    - lint-staged
  
  settings:
    prettier:
      semi: false
      singleQuote: true
      tabWidth: 2
    
    typescript:
      strict: true
      noImplicitAny: true

deployment:
  required_files:
    - .env.example
    - Dockerfile
    - docker-compose.yml
    - nginx.conf
  
  environment_variables:
    required:
      - NEXT_PUBLIC_API_URL
      - NEXT_PUBLIC_SITE_URL
      - NEXT_PUBLIC_GA_ID

git:
  branch_naming:
    format: "<type>/<description>"
    types:
      - feature
      - bugfix
      - hotfix
      - release
  
  commit_messages:
    format: "<type>: <description>"
    types:
      - feat
      - fix
      - docs
      - style
      - refactor
      - test
      - chore

security:
  requirements:
    - csrf_protection: true
    - xss_prevention: true
    - content_security_policy: true
    - secure_headers: true
    - input_sanitization: true